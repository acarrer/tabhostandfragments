            android:name="samples.tabhost.andreaoid.net.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="samples.tabhost.andreaoid.net.MyPageAdapter"
            android:label="@string/title_activity_my_page_adapter" >
        </activity>
        <activity
            android:name="samples.tabhost.andreaoid.net.MyTabFactory"
            android:label="@string/title_activity_my_tab_factory" >
        </activity>
        <activity
            android:name="samples.tabhost.andreaoid.net.MySampleFragment"
            android:label="@string/title_activity_my_sample_fragment" >
        </activity>
    </application>

</manifest>
